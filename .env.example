# POSTGRES_DB=go_api_starter_dev
# POSTGRES_USER=api_user  
# POSTGRES_PASSWORD=secure_dev_password_123
# DATABASE_URL=postgres://api_user:secure_dev_password_123@localhost:5432/go_api_starter_dev?sslmode=disable

# Option 2: Neon (uncomment and use your Neon connection string)
# DATABASE_URL=postgres://username:password@ep-example.us-east-1.aws.neon.tech/dbname?sslmode=require

