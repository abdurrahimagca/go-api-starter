# Database
# Option 1: Local PostgreSQL (with Docker)
POSTGRES_DB=go_api_starter_dev
POSTGRES_USER=api_user  
POSTGRES_PASSWORD=secure_dev_password_123
DATABASE_URL=postgres://api_user:secure_dev_password_123@localhost:5435/go_api_starter_dev?sslmode=disable

# Option 2: Any PostgreSQL provider
#DATABASE_URL=postgres://username:password@host:port/database?sslmode=require

# Server
PORT=8080
HOST=localhost

# Environment
ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here
ACCESS_TOKEN_EXPIRE_TIME=3600
REFRESH_TOKEN_EXPIRE_TIME=604800
ISSUER=go-api-starter
AUDIENCE=api-users

# Casbin
CASBIN_MODEL_PATH=./configs/casbin_model.conf
CASBIN_POLICY_PATH=./configs/casbin_policy.csv

# PgAdmin (Development only)
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin